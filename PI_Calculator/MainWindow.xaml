<Window x:Class="PI_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PI_Calculator"
        mc:Ignorable="d"
        Title="PI Calculator" Height="600" Width="900"
        Background="#F5F7FA"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4338CA"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#D1D5DB"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Padding" Value="15,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Padding" Value="15,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stop/Restart Button Style -->
        <Style x:Key="StopButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4F46E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Result Item Style -->
        <Style x:Key="ResultCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="π Calculator" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#1F2937"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Monte Carlo Method Simulation" 
                       FontSize="14" 
                       Foreground="#6B7280"/>
        </StackPanel>

        <!-- Input Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="16" 
                Padding="25"
                Margin="0,0,0,25">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Calculation Settings" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#1F2937"
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Sample Size" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="#374151"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <TextBox Grid.Column="1" 
                             Text="{Binding SampleSize}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,15,0"/>

                    <Button Grid.Column="2" 
                            Content="Add Calculation" 
                            Command="{Binding AddItemCommand}" 
                            CommandParameter="{Binding SampleSize}" 
                            IsEnabled="{Binding IsStopped}"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,15,0"/>

                    <Button Grid.Column="3" 
                            Content="{Binding StopBtnContent}" 
                            Command="{Binding StopCommand}"
                            Style="{StaticResource StopButton}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="16" 
                Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>

            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="Calculation Results" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#1F2937"
                           Margin="0,0,0,20"/>

                <!-- Header Row -->
                <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Sample Size" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="#6B7280"/>
                    <TextBlock Grid.Column="1" 
                               Text="Time (ms)" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="#6B7280"/>
                    <TextBlock Grid.Column="2" 
                               Text="π Value" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="#6B7280"/>
                    <TextBlock Grid.Column="3" 
                               Text="Actions" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="#6B7280"/>
                </Grid>

                <!-- Results List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Models}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ResultCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding SampleSize, StringFormat='{}{0:N0}'}" 
                                                   FontSize="14"
                                                   FontWeight="Medium"
                                                   Foreground="#1F2937"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Time, StringFormat='{}{0:N0}'}" 
                                                   FontSize="14"
                                                   Foreground="#4B5563"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Value, StringFormat='{}{0:F8}'}" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#4F46E5"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="3" 
                                                    Orientation="Horizontal" 
                                                    HorizontalAlignment="Right">
                                            <Button Content="Cancel" 
                                                    Command="{Binding DataContext.CalcelCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}" 
                                                    IsEnabled="{Binding DataContext.IsCalcelEnabled, RelativeSource={RelativeSource Self}}"
                                                    Style="{StaticResource CancelButton}"
                                                    Margin="0,0,10,0"/>

                                            <Button Content="Delete" 
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}"
                                                    Style="{StaticResource DeleteButton}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>